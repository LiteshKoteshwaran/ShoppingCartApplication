<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_PageLayout</title>
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.css" />
</head>
<body>
    <div>

        <div class="container">
            <div>
                @*@Html.Partial("PartialViewToolBar")*@

                <h1 class="alert alert-info">MyBasket</h1>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <!--sidebar with navigation options-->
                    <h5>@Html.ActionLink("My Basket", "", "")</h5>


                    <div>
                        <h6>Categories</h6>
                        @Html.Action("Categories","Home")
                    </div>

                    <div>
                        <h6>Brands</h6>
                        @Html.Action("Brands","Home")
                    </div>

                    <div>
                        <h6>My Cart</h6>
                        @Html.Action("CartDetails", "Cart")
                    </div>

                </div>

                <div class="col-md-9">
                    <!--main/variable content area-->
                    @RenderBody()
                </div>
            </div>
        </div>

        @*@Scripts.Render("~/bundles/jquery")*@
        <script type="text/javascript" src="@Url.Content("~/Scripts/UserdefinedSite.js")"></script>


    </div>
</body>
</html>